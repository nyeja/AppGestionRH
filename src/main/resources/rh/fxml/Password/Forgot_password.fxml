<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="rh.controller.ForgotPasswordController">
    <children>
        <Label layoutX="30.0" layoutY="20.0" text="Username:" />
        <TextField fx:id="usernameField" layoutX="120.0" layoutY="15.0" />
        <Label layoutX="30.0" layoutY="60.0" text="New Password:" />
        <PasswordField fx:id="newPasswordField" layoutX="120.0" layoutY="55.0" />
        <Button layoutX="150.0" layoutY="100.0" text="Submit Request" onAction="#handlePasswordResetRequest" />
        <Label fx:id="infoLabel" layoutX="100.0" layoutY="140.0" textFill="GREEN" />
    </children>
</AnchorPane>
