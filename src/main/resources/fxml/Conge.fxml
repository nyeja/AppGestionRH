<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="800.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rh.controller.CongeController">
    <children>
        <VBox prefHeight="800.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <BorderPane VBox.vgrow="NEVER">
                    <left>
                        <Label text="Demande de congé" BorderPane.alignment="CENTER">
                            <font>
                                <Font name="Times New Roman Bold" size="20.0" />
                            </font>
                            <BorderPane.margin>
                                <Insets top="10.0" right="20.0" bottom="10.0" left="20.0"/>
                            </BorderPane.margin>
                        </Label>
                    </left>
                    <right>
                        <HBox alignment="CENTER_RIGHT" spacing="20.0" BorderPane.alignment="CENTER">
                            <children>
                                <Label fx:id="lblEmployeMatricule" text="Matricule Employé: Non défini" />
                                <Label text="Solde de congés restant:" />
                                <Label fx:id="lblSoldeConge" text="-" style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                            </children>
                            <padding>
                                <Insets right="20.0"/>
                            </padding>
                        </HBox>
                    </right>
                </BorderPane>

                <Separator />

                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Date de début du congé" />
                        <Label text="Date de fin du congé" GridPane.rowIndex="1" />
                        <Label text="Types de congé" GridPane.rowIndex="2" />
                        <Label text="Justificatif" GridPane.rowIndex="3" />
                        <DatePicker fx:id="DebutDateConge" GridPane.columnIndex="1" />
                        <DatePicker fx:id="FinDateConge" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <ComboBox fx:id="TypeConge" prefWidth="150.0" promptText="Sélectionnez un type" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <TextArea fx:id="JustificatifField" prefHeight="60.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnSpan="2" GridPane.rowIndex="4">
                            <children>
                                <Button fx:id="EnvoyerBtn" onAction="#handleEnvoyerDemande" text="Envoyer la demande" />
                                <Button fx:id="AnnulerBtn" onAction="#handleAnnulerDemande" text="Annuler" />
                                <Label fx:id="messageStatut" textFill="BLUE" />
                            </children>
                        </HBox>
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" bottom="20.0" left="20.0" right="20.0"/>
                    </VBox.margin>
                </GridPane>

                <Separator />

                <Label text="Historique des demandes" style="-fx-font-weight: bold; -fx-font-size: 16px;">
                    <VBox.margin>
                        <Insets top="10.0" left="20.0"/>
                    </VBox.margin>
                </Label>

                <TableView fx:id="congeHistoryTable" prefHeight="200.0" prefWidth="960.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colIdConge" text="ID" prefWidth="80.0" />
                        <TableColumn fx:id="colDateDebut" text="Date Début" prefWidth="100.0" />
                        <TableColumn fx:id="colDateFin" text="Date Fin" prefWidth="100.0" />
                        <TableColumn fx:id="colTypeConge" text="Type" prefWidth="120.0" />
                        <TableColumn fx:id="colJustificatif" text="Justificatif" prefWidth="350.0" />
                        <TableColumn fx:id="colStatut" text="Statut" prefWidth="100.0" />
                    </columns>
                    <VBox.margin>
                        <Insets top="10.0" bottom="20.0" left="20.0" right="20.0"/>
                    </VBox.margin>
                </TableView>
            </children>
        </VBox>
    </children>
</AnchorPane>