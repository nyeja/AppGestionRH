<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rh.controller.CongeController">
    <children>
        <ScrollPane prefHeight="400.0" prefWidth="600.0">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="399.0" prefWidth="602.0">
                    <children>
                        <Label layoutX="31.0" layoutY="14.0" text="Demande de congé">
                            <font>
                                <Font name="Times New Roman" size="20.0" />
                            </font>
                        </Label>
                        <Label fx:id="lblEmployeMatricule" layoutX="31.0" layoutY="40.0" text="Matricule Employé: Non défini">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>

                        <Label layoutX="31.0" layoutY="80.0" text="Date de début du congé " />
                        <Label layoutX="31.0" layoutY="124.0" text="Date de fin du congé" />
                        <Label layoutX="31.0" layoutY="164.0" text="Types de congé" />
                        <Label layoutX="31.0" layoutY="208.0" text="Justificatif" />

                        <DatePicker fx:id="DebutDateConge" layoutX="205.0" layoutY="76.0" />
                        <DatePicker fx:id="FinDateConge" layoutX="205.0" layoutY="120.0" />
                        <ComboBox fx:id="TypeConge" layoutX="205.0" layoutY="160.0" prefWidth="150.0" promptText="Sélectionnez un type" />
