<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="rh.controller.EmployeViewController">
    <left>
        <VBox prefWidth="200.0" style="-fx-background-color: #313938;" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="20.0" right="10.0" bottom="20.0" left="10.0"/>
            </padding>
            <spacing>15.0</spacing>
            <children>
                <ImageView fitHeight="80.0" fitWidth="80.0" pickOnBounds="true" preserveRatio="true">
                    <VBox.margin>
                        <Insets bottom="10.0" left="50.0" top="10.0"/>
                    </VBox.margin>
                </ImageView>
                <Label text="Espace Employé" style="-fx-font-size: 18px; -fx-text-fill: white; -fx-font-weight: bold;">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0"/>
                    </VBox.margin>
                </Label>

                <Button fx:id="congeBtn" onAction="#handleCongeButton" prefWidth="180.0" text="Demande de Congé" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" />
                <Button fx:id="permissionBtn" onAction="#handlePermissionButton" prefWidth="180.0" text="Demande de Permission" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;" />

                <Pane VBox.vgrow="ALWAYS" />

                <Button fx:id="btnLogout" onAction="#handleLogout" prefWidth="180.0" text="Déconnexion" style="-fx-background-color: #FF6347; -fx-text-fill: white; -fx-font-size: 14px; -fx-alignment: CENTER_LEFT;">
                </Button>
            </children>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentArea" BorderPane.alignment="CENTER">
            <Label text="Bienvenue sur votre Espace Employé !" style="-fx-font-size: 24px; -fx-text-fill: #333;"/>
        </StackPane>
    </center>
</BorderPane>