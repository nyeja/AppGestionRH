                        <Button fx:id="AnnulerBtn" layoutX="314.0" layoutY="300.0" mnemonicParsing="false" text="Annuler" onAction="#handleAnnulerDemande" />

                        <Label fx:id="messageStatut" layoutX="31.0" layoutY="350.0" textFill="BLUE">
                            <font>
                                <Font size="12.0" />
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>