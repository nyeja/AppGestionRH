<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rh.controller.RhPermissionController">
    <children>
        <Label layoutX="30.0" layoutY="25.0" style="-fx-font-size: 24px; -fx-font-weight: bold;" text="Gestion des Demandes de Permission" />

        <Label layoutX="30.0" layoutY="70.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Nouvelles Demandes" />
        <TableView fx:id="newPermissionTable" layoutX="30.0" layoutY="100.0" prefHeight="250.0" prefWidth="980.0">
            <columns>
            <TableColumn fx:id="colIdPermissionNew" prefWidth="50.0" text="ID" />
            <TableColumn fx:id="colMatriculeEmployeNew" prefWidth="60.0" text="Matricule" />
            <TableColumn fx:id="colNomCompletNew" prefWidth="110.0" text="Nom" />
            <TableColumn fx:id="colDateDebutNew" prefWidth="80.0" text="Date Début" />
            <TableColumn fx:id="colHeureDebutNew" prefWidth="70.0" text="Heure Début" />
            <TableColumn fx:id="colDateFinNew" prefWidth="80.0" text="Date Fin" />
            <TableColumn fx:id="colHeureFinNew" prefWidth="70.0" text="Heure Fin" />
            <TableColumn fx:id="colMotifNew" prefWidth="250.0" text="Motif" />
            <TableColumn fx:id="colStatutNew" prefWidth="80.0" text="Statut" />
            <TableColumn fx:id="colActionNew" prefWidth="120.0" text="Action" />
            </columns>
        </TableView>

        <HBox layoutX="30.0" layoutY="370.0" spacing="10.0">
            <Button fx:id="btnApprouver" onAction="#handleApprouver" text="Approuver" />
            <Button fx:id="btnRefuser" onAction="#handleRefuser" text="Refuser" />
        </HBox>

        <Label layoutX="30.0" layoutY="420.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Historique (Non Modifiable)" />
        <TableView fx:id="historyPermissionTable" layoutX="30.0" layoutY="450.0" prefHeight="250.0" prefWidth="980.0">
            <columns>
            <TableColumn fx:id="colIdPermissionHistory" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colMatriculeEmployeHistory" prefWidth="60.0" text="Matricule" />
                <TableColumn fx:id="colNomCompletHistory" prefWidth="110.0" text="Nom" />
                <TableColumn fx:id="colDateDebutHistory" prefWidth="80.0" text="Date Début" />
                <TableColumn fx:id="colHeureDebutHistory" prefWidth="70.0" text="Heure Début" />
                <TableColumn fx:id="colDateFinHistory" prefWidth="80.0" text="Date Fin" />
                <TableColumn fx:id="colHeureFinHistory" prefWidth="70.0" text="Heure Fin" />
                <TableColumn fx:id="colMotifHistory" prefWidth="250.0" text="Motif" />
            <TableColumn fx:id="colStatutHistory" prefWidth="80.0" text="Statut" />
            </columns>
        </TableView>

        <Label fx:id="messageStatutRh" layoutX="30.0" layoutY="710.0" text="Chargement des demandes..." />
    </children>
</AnchorPane>